@model GestionMobilites.ViewModels.AgenceViewModel

<h1>Créer une nouvelle Agence</h1>
@*<h4>RegionViewModel</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">

            @if (ViewBag.Message != null)
            {
                <h5 class="alert alert-danger">@ViewBag.Message</h5>
            }

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="LibelleAgence" class="control-label">Libellé Agence</label>
                <input asp-for="LibelleAgence" class="form-control" />
                <span asp-validation-for="LibelleAgence" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegionId" class="control-label">Region</label>
                <select asp-for="RegionId" class="form-control"
                        asp-items="@(new SelectList(Model.Regions,"Id","LibelleRegion"))"> </select>
                <span asp-validation-for="RegionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adresse" class="control-label">Adresse</label>
                <input asp-for="Adresse" class="form-control" />
                <span asp-validation-for="Adresse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumTelFix" class="control-label">Num Tél Fix</label>
                <input asp-for="NumTelFix" class="form-control" />
                <span asp-validation-for="NumTelFix" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOuverture" class="control-label">Date Ouverture</label>
                <input asp-for="DateOuverture" class="form-control" />
                <span asp-validation-for="DateOuverture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Créer" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-primary">Retour</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
